<?xml version="1.0" ?>
<robot name="robot">    

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange"> 
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue"> 
        <color rgba="0.2 0.2 1 1"/>
    </material>    

    <material name="black"> 
        <color rgba="0 0 0 1"/>
    </material>
    
    <material name="grey">
        <color rgba="0.6 0.6 0.6 1" />
    </material>

    <!-- Link - base_footprint -->
    <link name="base_footprint">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.01"/> <!-- Thin base footprint-->
            </geometry>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - joint_base_footprint_to_base_link -->
    <joint name="joint_base_footprint_to_base_link" type="fixed">
        <origin xyz="0 0 0.005" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <!-- Link - base_link -->
    <link name="base_link">
        <inertial>
            <mass value="20" />
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <inertia ixx="1.4" ixy="0" ixz="0" iyy="1.4" iyz="0" izz="2.5"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint - left_wheel_joint -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.2 -0.15" rpy="-1.57 0 0"/>
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - left_wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0.02 0 " rpy="0 0 0"/>
            <inertia ixx="0.00029" ixy="0" ixz="0" iyy="0.00031" iyz="0" izz="0.00029"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT WHEEL -->
    <!-- Joint - right_wheel_joint -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.2 -0.15" rpy="1.57 0 0"/>
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - right_wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0.02 0 " rpy="0 0 0"/>
            <inertia ixx="0.00029" ixy="0" ixz="0" iyy="0.00031" iyz="0" izz="0.00029"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- FRONT CASTER WHEEL -->
     <!-- Joint - base_link_front_caster_wheel -->
    <joint name="base_link_front_caster_wheel" type="fixed">
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0" />
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties friction="0" />
    </joint>

    <!-- Link - front_caster -->
    <link name="front_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00025" ixy="0" ixz="0" iyy="0.00025" iyz="0" izz="0.00025"/>
        </inertial>

        <!-- Caster Wheel -->
        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
    </link>

    <!-- BACK CASTER WHEEL -->
     <!-- Joint - base_link_back_caster_wheel -->
    <joint name="base_link_back_caster_wheel" type="fixed">
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0" />
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties friction="0" />
    </joint>    

    <!-- Link - back_caster -->
    <link name="back_caster">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00025" ixy="0" ixz="0" iyy="0.00025" iyz="0" izz="0.00025"/>
        </inertial>

        <!-- Caster Wheel -->
        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
    </link>

    <!-- LASER -->
    <joint name="base_link_front_laser" type="fixed">
        <parent link="base_link"/>
        <child link="front_laser"/>
        <origin xyz="0.25 0 0.075" rpy="3.14 0 0"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="front_laser">
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
            <inertia ixx="0.00083" ixy="0" ixz="0" iyy="0.00083" iyz="0" izz="0.00125"/>
        </inertial>

        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
        </collision>
    </link>

</robot>
